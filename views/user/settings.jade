.panel.panel-default
    .panel-heading 基本信息
    .panel-body
        .row
            .col-md-3
                #header
                    img#setHeader(src="#{req.user.avatar}")
            .col-md-9
                form.form-horizontal(action="/users/", method="put")
                    .form-group
                        label.col-sm-2.control-label(for="username") 账号
                        .col-sm-10
                            input#username.form-control(type="text",name="username",value="#{req.user.username}")
                     .form-group
                        label.col-sm-2.control-label(for="name") 姓名
                        .col-sm-10
                            input#name.form-control(type="text",name="name",value="#{req.user.name}")
                    .form-group
                        label.col-sm-2.control-label(for="email") 邮箱
                        .col-sm-10
                            input#email.form-control(type="email",name="email",value="#{req.user.email}")
                    .form-group
                        .col-sm-10.col-sm-offset-2
                            button.btn.btn-primary 保存   

#modalAvatar.modal.fade(aria-hidden="true",data-toggle="modal")
    .modal-dialog
        .modal-content
            .modal-header
                button.close(data-dismiss="modal")
                    span(aria-hidden="true")&times;
                    span.sr-only 关闭
                h4.modal-title Modal title
            .modal-body
                #modalAvatarBody.img-container
                    img#avatarView(src="#{req.user.avatar}")
            .modal-footer
                button#selPicture.btn.btn-primary 选择头像
                button#savePicture.btn.btn-primary 保存
                button.btn.btn-default(data-dismiss="modal") 取消
