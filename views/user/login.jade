doctype html
html
  include ../partial/_header
  block styles
    link(rel='stylesheet', href='/stylesheets/user.css')
  body
    include ../partial/_nav      
    .container.body-content
      #loginAlert 
      .signup
        .signup-header
          h4 登陆
        .signup-body
          form#loginform.form-horizontal(action="/api/login", method="post", role="form")
            .form-group
              label.col-md-3.control-label(for="username") 账号
              .col-md-9
                input#username.form-control(type="text", name="username")
            .form-group
              label.col-md-3.control-label(for="password") 密码
              .col-md-9
                input#password.form-control(type="password", name="password")
            .form-group
              .col-md-9.col-md-offset-3
                input(type='hidden', name="strategy", value="local")
                button#btnLogin.btn.btn-primary(type="submit") 登陆
      include ../partial/_footer
      script(src='//cdn.bootcss.com/jquery/1.11.3/jquery.min.js')
      script(src='//cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js')
      script(src='//cdn.bootcss.com/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js')
      script(src='/javascripts/signup.js')
        
